#menu
    background: rgba(255, 255, 255, 0.95);
    box-shadow: 0 2px 5px 0px rgba(0,0,0,0.10);
    font-size: 16px;
    font-weight: 300;
    left: 0;
    position: fixed;
    top: 0;
    width: 100vw;
    z-index: 999;

    .navbar
        border: 0;
        line-height: 100px;
        margin: 0 auto;

        .navbar-toggle
            border: 1px solid #cecece;
            margin-right: 0;
            width: 40px;

        .icon-bar
            background: #cecece;
            height: 2px;
            width: 100%;

        .navbar-header
            text-align: left;

        .nav
            a
                color: $textColor;
                font-weight: 300;
                line-height: 88px;
                padding: 12px 20px 0 20px;

                &:focus
                &:hover
                    background: none;
                    color: $linkColor;

            .active
                a
                    border-bottom: 5px solid $linkColor;
                    color: $linkColor;


@media (max-width: 767px)
    #menu
        padding: 0!important;

        #menu-bar
            .nav
                a
                    line-height: 48px;
                    padding: 0;

            .active
                a
                    border: none;
                    color: $linkColor;

        .navbar-nav
            li
                float: none;
                text-align: center;

        .navbar
            border: 0;
            line-height: 50px;
            margin: 0 auto;
